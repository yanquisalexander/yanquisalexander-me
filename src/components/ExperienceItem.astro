---
import FeaturedButton from "./FeaturedButton.astro";
import HiglightedText from "./HiglightedText.astro";
import SearchIcon from "@/icons/SearchIcon.astro";

interface Props {
    title: string;
    description: string;
    link?: string;
    date: string;
}

const { title, description, link, date } = Astro.props;
---

<article
    class="flex flex-col bg-violet-500/10 p-4 rounded-md border-violet-400/25 border"
>
    <time class="text-sm font-normal leading-none text-white text-opacity-80"
        >{date}</time
    >
    <h3 class="mt-3 text-lg leading-6 font-bold text-violet-300">
        {title}
    </h3>
    <p class="mb-4 text-sm text-pretty font-normal text-white text-opacity-80">
        {description}
    </p>
    {
        link && (
            <div class="flex justify-end">
                <FeaturedButton href={link}>
                    <SearchIcon class="w-4 h-4 mr-1.5" />
                    See more details about this
                </FeaturedButton>
            </div>
        )
    }
</article>
