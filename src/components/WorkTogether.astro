---
import SparklesIcon from "@/icons/SparklesIcon.astro";
import HomeSectionContainer from "./HomeSectionContainer.astro";
import MailIcon from "@/icons/MailIcon.astro";
---

<HomeSectionContainer id="work-together" title="Let's work together">
    <SparklesIcon class="inline-block w-6 h-6 mr-2" slot="icon" />
    <div
        class="flex flex-col gap-4 mb-8 bg-violet-500/10 text-violet-300 border-violet-500/90 border p-4 rounded-md max-w-3xl mx-auto"
    >
        <p class="text-lg text-white text-opacity-85">
            I'm available for freelance work. If you have a project in mind,
            let's work together!
        </p>
        <div class="flex justify-end gap-4">
            <a
                href="mailto:alex.barrios2910@gmail.com"
                target="_blank"
                class="bg-white/10 text-white text-opacity-85 px-4 py-2 rounded-md hover:bg-white/20 transition-colors duration-300"
            >
                <MailIcon class="w-6 h-6 mr-2 inline-block" />
                Send me an email
            </a>
        </div>
    </div>
</HomeSectionContainer>
