---
import AboutMe from "@/components/AboutMe.astro";
import GlowedBadge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import HomeHero from "../components/HomeHero.astro";
import Layout from "../layouts/Layout.astro";
import ClockUpIcon from "@/icons/ClockUpIcon.astro";
import UserIcon from "@/icons/UserIcon.astro";
import ProjectsBento from "@/components/ProjectsBento.astro";
import SparklesIcon from "@/icons/SparklesIcon.astro";
import FeaturedButton from "@/components/FeaturedButton.astro";
import ExternalLinkIcon from "@/icons/ExternalLinkIcon.astro";
import Seo from "@/components/Seo.astro";
import HomeSectionContainer from "@/components/HomeSectionContainer.astro";
import WorkTogether from "@/components/WorkTogether.astro";
---

<Layout
	description="I'm a full-stack developer with a passion for building beautiful and functional websites."
>
	<HomeHero />

	<HomeSectionContainer id="projects" title="Projects">
		<SparklesIcon class="inline-block w-6 h-6 mr-2" slot="icon" />
		<ProjectsBento />
	</HomeSectionContainer>
	<WorkTogether />
	<HomeSectionContainer id="experience" title="Experience">
		<ClockUpIcon class="inline-block w-6 h-6 mr-2" slot="icon" />
		<Experience />
	</HomeSectionContainer>

	<HomeSectionContainer id="about" title="About Me">
		<UserIcon class="inline-block w-6 h-6 mr-2" slot="icon" />
		<AboutMe />
	</HomeSectionContainer>
</Layout>
